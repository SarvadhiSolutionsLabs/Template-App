# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

def keyboard
  pod 'IQKeyboardManagerSwift'
end

def apiPods
  pod 'Alamofire'
  pod 'ObjectMapper'
end

def loader
  pod 'KRProgressHUD'
end

def enc
  pod 'CryptoSwift'
  pod 'GzipSwift'
end

def otpView
  pod 'OTPFieldView'
end

def sheetView
  pod 'FittedSheets'
  pod 'Toast-Swift'
end

def textView
  pod 'GrowingTextView'
end

def swiftGen
  pod 'SwiftGen'
end

target 'Template' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  keyboard
  apiPods
  loader
  enc
  otpView
  sheetView
  textView
  swiftGen
  
  # Pods for Template

end
